<label class="{{_modifiers.[0]}}__checkbox-radio {{_modifiers.[0]}}__checkbox-radio--{{#unless type}}checkbox{{else}}{{type}}{{/unless}}">
	<input 
		type="{{#unless type}}checkbox{{else}}{{type}}{{/unless}}" 
		class="{{_modifiers.[0]}}__checkbox-radio__control" 
		{{#if id}}id="{{ID}}"{{/if}} 
		{{#if name}}name="{{name}}"{{/if}} 
		{{#if value}}value="{{value}}"{{/if}}
		{{#if isSelected}}checked="checked"{{/if}} 

		{{#if isRequired}}required="required"{{/if}} 
		{{#if isReadonly}}readonly="readonly"{{/if}}
		{{#if isDisabled}}disabled="disabled"{{/if}}
	>
	<span class="{{_modifiers.[0]}}__checkbox-radio__label">{{label}}</span>
	<span class="{{_modifiers.[0]}}__checkbox-radio__faux"><!-- faux --></span>
</label>
