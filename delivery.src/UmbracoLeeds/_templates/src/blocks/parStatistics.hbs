{{#if stats.[0]}}
    <div class="uza-cf-area section-padding-80-0">
        <div class="container">
            <div class="row">
                {{#each stats}}
                    <div class="col-12 col-sm-6 col-lg-3">
                        <div class="single-cf-area d-flex align-items-center mb-80">
                            <h2><span class="counter">{{value}}</span></h2>
                            <div class="cf-text">
                                <h6>{{{description}}}</h6>
                            </div>
                            <div class="bg-icon"><i class="icon_{{iconName}}"></i></div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
{{/if}}