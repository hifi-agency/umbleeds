<section class="uza-portfolio-single-area section-padding-80">
    <div class="container">
        <div class="row justify-content-between align-items-end">
            <div class="col-12 col-md-6">
                <div class="portfolio-details-text">
                    {{#if title}}
                        <h2>{{title}}</h2>
                    {{/if}}
                    {{#if subTitle}}
                        <h6>{{subTitle}}</h6>
                    {{/if}}
                    {{#if text}}
                        <p>{{text}}</p>
                    {{/if}}
                </div>
            </div>
            <div class="col-12 col-md-4 col-lg-3">
                <div class="portfolio-meta">
                    <h6 class="portfolio__meta__items__item">
                        Client: {{client}}
                    </h6>
                    <h6 class="portfolio__meta__items__item">
                        Date: {{date}}
                    </h6>
                    <h6 class="portfolio__meta__items__item">
                        Location: {{location}}
                    </h6>
                    <h6 class="portfolio__meta__items__item">
                        Author: {{author}}
                    </h6>
                </div>
                {{#if socialLinks.[0]}}
                    <div class="portfolio-social-info d-flex align-items-center">
                        <p>Share:</p>
                        {{#each socialLinks}}
                            <a href="{{href}}" title="{{title}}"><i class="fa fa-{{label}}" aria-hidden="true"></i></a>
                        {{/each}}
                    </div>
                {{/if}}
            </div>
        </div>

        {{#if image}}
            <div class="row">
                <div class="col-12">
                    <div class="portfolio-thumbnail mt-80">
                        <img src="{{image.src}}" alt="{{image.alt}}">
                    </div>
                </div>
            </div>
        {{/if}}

        <div class="row">
            <div class="col-12">
                <div class="portfolio-pager mt-80 d-flex align-items-center justify-content-between">
                    <a href="{{navigation.previous.href}}" title="{{navigation.previous.title}}"><i class="arrow_left"></i> {{navigation.previous.label}}</a>
                    <a href="{{navigation.back.href}}" title="{{navigation.back.title}}">{{navigation.back.label}}</a>
                    <a href="{{navigation.next.href}}" title="{{navigation.next.title}}">{{navigation.next.label}} <i class="arrow_right"></i></a>
                </div>
            </div>
        </div>
    </div>
</section>